<% // search playlist 
const {
    items: searchPlaylistItems
}=locals.searchPlaylist; 
%>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <%- include('../layouts/head', {title: `Search | Musify` }) %>
    </head>

    <body>
        <!-- recently played -->
        <%- include('../layouts/recent_played', { recentlyPlayed: locals.recentlyPlayedTracks }) %>

            <article class="page custom-scrollbar" data-page>
                <!-- top bar -->
                <%- include('../partials/top_bar', locals.currentProfile ) %>
                    <!-- bottom nav -->
                    <%- include('../partials/bottom_nav') %>
                        <!-- search filter list -->
                        <%- include('../layouts/search_filter', { type: locals.type }) %>

                            <div class="main" data-main>

                                <section class="section">

                                    <div class="grid-list">
                                        <% searchPlaylistItems.forEach(({id, images, name: title, owner, uri})=> { %>
                                            <% const text=`By ${owner.display_name}`
                                                const [image]=images || []; %>

                                                <%- include('../partials/card', { image,
                                                    type: 'playlist' , title, text,
                                                    link: `/playlist/${id}`, uri }) %>

                                                    <% }) %>
                                    </div>

                                    <!-- pagination -->

                                    <%- include('../partials/pagination', locals.searchPlaylist) %>

                                </section>


                                <!-- first line ne proper karvi -->
                            </div>

                            <!-- player sm -->
                            <%- include('../partials/player_sm') %>
                                <!-- player lg -->
                                <%- include('../partials/player_lg') %>
                                    <!-- footer -->
                                    <%- include('../layouts/footer') %>

            </article>
    </body>

    </html>